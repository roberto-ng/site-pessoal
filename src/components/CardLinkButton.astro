---
export interface Props {
    href: string,
    text: string,
}

const { href, text } = Astro.props as Props;
---

<div class="button">
    <a 
        href={href}
        class="link"
        target="_blank"
        rel="noreferrer"
    >
        {text}
    </a>
</div>

<style lang="scss">
	.button {
		display: flex; 
		justify-content: center;

		a {
			text-decoration: none;
			box-sizing: border-box;
		}
	}

    .link {
		margin: 5px;
		width: 100px;
		padding: 9px;
		border: 1px solid #313338;
		color: #313338;
		border-radius: 5px;
		transition: all 0.3s;
		
		&:hover {
			background-color: #313338;
			color: white;
		}
		
		p {
			font-size: medium;
		}
	}
</style>