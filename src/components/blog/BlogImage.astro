---
export type Props = {
    src: string,
    caption?: string,
    width?: string,
    height?: string,
};

const props = Astro.props as Props;
---

<div class="flex flex-col items-center w-full">
    <img 
        class="max-w-[100vw]"
        loading="lazy"
        src={props.src} 
        width={props.width}
        height={props.height}
        alt={props.caption}
    />

    {(props.caption) && (
        <small>{props.caption}</small>
    )}
</div>
