---
import path from 'path';
import { CollectionEntry } from 'astro:content';
import { isDateValid, Post } from "@/src/lib/post";

export type Props = {
    post: CollectionEntry<'post'>,
    file: string,
};

const { post, file } = Astro.props;
const id = path.parse(file).name;

const date = new Date(post.data.date + ' EDT');
if (!isDateValid(date)) {
    throw new Error(`Data do post '${id}' inv√°lida: ${post.data.date}`);
}
---

<div class="flex flex-col max-w-lg gap-6 p-5 mx-1 bg-white rounded shadow-lg dark:bg-zinc-800">
    <a 
        class="no-underline text-[22px] font-bold text-zinc-900 dark:text-white"
        href={`/pt-br/posts/${id}`}
    >
        {post.data.title}
    </a>

    <time class="m-0 text-slate-500 dark:text-zinc-400" date-time={post.data.date}>
        Postado em: {date.toLocaleDateString('pt-BR')}
    </time>
</div>